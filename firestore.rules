rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /salas/{salaId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
      
      match /jogadores/{jogadorId} {
        allow read: if true;
        allow create: if true;
        allow update: if true;
        allow delete: if true;
      }
    }
  }
}